{
  "build": {
    "staging": {
      "android": { "buildType": "app-bundle" },
      "distribution": "internal"
    },
    "production": {
      "android": { "buildType": "app-bundle" },
      "distribution": "store"
    }
  },
  "submit": {
    "staging": {
      "android": {
        "serviceAccountKeyPath": "./credentials/service-account.json",
        "track": "internal",
        "releaseStatus": "draft"
      }
    },
    "production": {
      "android": {
        "serviceAccountKeyPath": "./credentials/service-account.json",
        "track": "internal"
      }
    }
  }
}
